<% provide(:title, 'Modificar Contraseña') %>

<div class="container-fluid">
  <div class="row content">
    <div class="col-md-12 col-xs-12">
      <h1>Cambiar contraseña</h1>
      <%= render 'shared/user_error_messages' %>
    </div>
  </div>
  <%= form_for @user, url: update_user_path(@user), html: { method: :patch } do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :password, "Nueva Contraseña:" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :password_confirmation, 'Confirma tu nueva contraseña:'%>
      <%= f.password_field :password_confirmation, class: 'form-control'%>
    </div>
  </div>

    <br><br><br>
    <div class="row">
      <div class="col-md-4 offset-md-4 col-btn">
        <br>
        <%= f.submit "Actualizar contraseña", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
  </div>

