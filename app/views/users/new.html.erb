<% provide(:title, 'Crear Usuario') %>
<div class="container-fluid">    
  <div class="row content">
    <div class="col-md-12 col-xs-12">
      <h1>Crear usuario</h1>
      <%= render 'shared/user_error_messages' %>
    </div>
  </div>
  <%= form_for @user, url: users_path(@user), html: { method: :post } do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :name, 'Nombre'%>
      <%= f.text_field :name, class: 'form-control'%>
    </div>
    <div class="col-md-6">
      <%= f.label :last_name, "Apellido" %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :email, "Correo" %>
      <%= f.email_field :email, class: 'form-control' %>
      </div>
    <div class="col-md-6">
      <%= f.label :email, "Rol" %>
      <br>
      <%= f.collection_select(:role_id, Role.all, :id, :name, {}, {class: 'form-control'}) %>
    </div>
  </div>

    <br><br><br>
    <div class="row">
      <div class="col-md-2 col-sm-4 offset-md-4 offset-sm-2">
            <%= link_to raw("<button class=\"btn btn-danger form-btn\">Cancelar</button>"),
                      users_url%>
      </div>
      <div class="col-md-2 col-sm-4 col-btn">
        <br>
        <%= f.submit "Guardar", class: "btn btn-success form-btn" %>
      </div>
    </div>
    <% end %>

  </div>

</div>
