<% provide(:title, 'Usuarios') %>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>Usuarios</h2>
    </div>
    <div class="col-md-2">
      <%= link_to "Crear usuario", new_user_url, class:"btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 col-xs-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for user in @users do %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td class="role"><%= user.role.name %></td>
            <td>
              <%= link_to "Editar", edit_user_data_path(user), class:"btn btn-warning" %>
              <%= button_to "Borrar", { action: "destroy", id: user.id }, method: :delete, data: { confirm: "¿Estás seguro de querer borrar este usuario?" }, class: 'btn btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
