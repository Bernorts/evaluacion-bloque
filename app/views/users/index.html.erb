<% provide(:title, 'Usuarios') %>
<% content_for :stylesheet do %>
    <%= stylesheet_link_tag    "styles", :media => "all" %>
<% end %>

<div class="container-fluid ">
  <div class="row content">
    <div class="col-md-10 col-xs-10">
      <h2>Usuarios</h2>
    </div>
    <% if current_user.role.id == 1  %>
      <div class="col-md-2 col-xs-2">
        <%= link_to "Crear usuario", new_user_url, class:"btn btn-success float-right" %>
      </div>
    <% end %>
  </div>
  <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Rol</th>
            <% if current_user.role.id == 1  %>
              <th>Acciones</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% for user in @users do %>
          <tr>
            <td width="20%" > <a href=<%= show_user_url(user) %>> <%= user.name %> </a> </td>
            <td width="20%"><%= user.last_name %></td>
            <td width="20%"><%= user.email %></td>
            <td width="10%"><%= user.role.name %></td>
            <% if current_user.role.id == 1  %>
              <td width="20%">
                <%= link_to edit_user_data_path(user),class:"btn btn-warning" do %>
                  <i class="fa fa-pencil"></i>
                <% end %>
                <%= link_to destroy_user_path(user), method: :delete, data: { confirm: '¿Estás seguro de querer borrar este usuario?' },  class: 'btn btn-danger' do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
