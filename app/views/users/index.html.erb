<% provide(:title, 'Usuarios') %>
<% content_for :stylesheet do %>
    <%= stylesheet_link_tag    "styles", :media => "all" %>
<% end %>

<div class="container-fluid ">
  <div class="row content">
    <div class="col-md-10 col-xs-10">
      <h2>Usuarios</h2>
    </div>
    <div class="col-md-2 col-xs-2">
      <%= link_to "Crear usuario", new_user_url, class:"btn btn-success float-right" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 col-xs-12">
      <table class="table table-hover table-responsive">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for user in @users do %>
          <tr>
            <td width="20%" > <a href=<%= show_user_url(user) %>> <%= user.name %> </a> </td>
            <td width="20%"><%= user.last_name %></td>
            <td width="20%"><%= user.email %></td>
            <td width="10%"><%= user.role.name %></td>
            <td width="20%">
              <%= link_to "Editar", edit_user_data_path(user), class:"btn btn-warning" %>
              <%= link_to "Borrar", { action: "destroy", id: user.id }, method: :delete, data: { confirm: "¿Estás seguro de querer borrar este usuario?" }, class: 'btn btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
