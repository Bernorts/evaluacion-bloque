<% provide(:title, 'Crear Semestre') %>
<div class="container-fluid">

  <div class="row content">
    <div class="col-md-12 col-xs-12">
      <h1>Crear Semestre</h1>
      <%= render 'shared/semester_error_messages' %>
    </div>
  </div>
  <%= form_for @semester, url: semesters_path(@semester), html: { method: :post } do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :name, 'Nombre'%>
      <%= f.text_field :name, class: 'form-control'%>
    </div>
    <div class="col-md-3">
      <%= f.label :start_date, "Fecha de inicio" %>
      <%= f.date_field :start_date, class: 'form-control' %>
    </div>



    <div class="col-md-3">
      <%= f.label :end_date, "Fecha de fin" %>
      <%= f.date_field :end_date, class: 'form-control' %>
    </div>

  </div>
<br>
    <div class="row">
      <div class="col-md-12 col-xs-12">
        <ul class="nav nav-tabs">
          <li class="nav-item"><a class="nav-link active pills" data-toggle="tab" href="#new-students-index" role="tab">Estudiantes Nuevos</a></li>
          <li class="nav-item"><a class="nav-link pills" data-toggle="tab" href="#students-index" role="tab">Estudiantes Anteriores</a></li>
          <li class="nav-item"><a class="nav-link pills" data-toggle="tab" href="#professors-index" role="tab">Profesores</a></li>
        </ul>
        <div class="tab-content" id="nav-tabContent-usersindex">
          <div class="tab-pane fade show active" id="new-students-index" role="tabpanel" aria-labelledby="new-students-tab">
            <%= f.collection_check_boxes :user_ids, @new_users, :id, :full_name do |b| %>
              <div class="collection-check-box col-md-3 col-xs-12">
                <%= b.check_box %>
                <%= b.label %>
              </div>
            <% end %>
          </div>

          <div class="tab-pane fade show" id="students-index" role="tabpanel" aria-labelledby="students-tab">
            <%= f.collection_check_boxes :user_ids, @old_users, :id, :full_name do |b| %>
              <div class="collection-check-box col-md-3 col-xs-12">
                <%= b.check_box %>
                <%= b.label %>
              </div>
            <% end %>
          </div>

          <div class="tab-pane fade show" id="professors-index" role="tabpanel" aria-labelledby="professors-tab">
            <%= f.collection_check_boxes :user_ids, @professors, :id, :full_name do |b| %>
              <div class="collection-check-box col-md-3 col-xs-12">
                <%= b.check_box %>
                <%= b.label %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <br><br><br>
    <div class="row">
      <div class="col-md-2 col-sm-4 offset-md-4 offset-sm-2">
        <br>
        <%= link_to raw("<button class=\"btn btn-danger form-btn\">Cancelar</button>"),
                   semesters_url%>
      </div>
      <div class="col-md-2 col-sm-4">
        <br>
        <%= f.submit "Guardar", class: "btn btn-success form-btn" %>
      </div>
    </div>
    <% end %>

  </div>

</div>
